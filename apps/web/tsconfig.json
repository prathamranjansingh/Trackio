{
  "extends": "@repo/typescript-config/nextjs.json",
    "compilerOptions": {
      "plugins": [
        {
          "name": "next"
        }
      ],
      "baseUrl": ".",
      "paths": {
        "@/pages/*": ["pages/*"],
        "@/styles/*": ["styles/*"],
        "@/ui/*": ["ui/*"],
        "@/lib/*": ["lib/*"]
      }
    },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
