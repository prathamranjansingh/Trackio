{
  "name": "codetracker",
  "displayName": "Code Tracker",
  "description": "Automatic time tracking for your coding activity.",
  "version": "0.1.0",
  "publisher": "YourPublisherName",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/your-repo-name.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && webpack --mode production",
    "dev": "npm run clean && webpack --mode development --watch",
    "lint": "eslint src --ext ts",
    "package": "npm run build && vsce package --no-dependencies --out ."
  },
  "contributes": {
    "commands": [
      {
        "command": "codetracker.setApiKey",
        "title": "Code Tracker: Set API Key"
      },
      {
        "command": "codetracker.openDashboard",
        "title": "Code Tracker: Open Dashboard"
      },
      {
        "command": "codetracker.forceSendBatch",
        "title": "Code Tracker: Force Send Batch (Debug)"
      }
    ],
    "configuration": {
      "title": "Code Tracker",
      "properties": {
        "codetracker.apiKey": {
          "type": "string",
          "description": "Your personal API key for Code Tracker.",
          "scope": "machine-overridable"
        },
        "codetracker.apiUrl": {
          "type": "string",
          "default": "http://localhost:3000/api/heartbeats",
          "description": "The API endpoint URL to send heartbeats to."
        },
        "codetracker.statusBarVisibility": {
          "type": "boolean",
          "default": true,
          "description": "Show/hide the Code Tracker icon in the status bar."
        }
      }
    }
  },
  "devDependencies": {
    "@types/lodash.debounce": "^4.0.9",
    "@types/node": "^20.11.24",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.24.0",
    "eslint": "^8.57.0",
    "rimraf": "^5.0.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8"
  }
}