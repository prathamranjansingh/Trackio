{
   "extends": "@repo/typescript-config/react-library.json",
  "include": ["src", "components", "lib"],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
      "lib/*": ["lib/*"]
    }
  }
}